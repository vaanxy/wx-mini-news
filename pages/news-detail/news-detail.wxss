/* pages/news-detail/news-detail.wxss */
.news-head-wrapper {
  position: relative;
  height: 500rpx;
  overflow: hidden;
}

.news-info {
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  padding: 32rpx;
  background: linear-gradient(rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.5));
  color: white;
}

.news-title {
  font-size: 45rpx;
  line-height: 63rpx;
}

.news-meta-info {
  display: flex;
  width: 100%;
  font-size: 25rpx;
  line-height: 35rpx;
  color: rgba(255, 255, 255, 0.7); 
}

.news-date {
  margin-left: 32rpx;
  flex: 1 0 auto;
} 

.news-head-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 500rpx; 
  z-index: -1;
}

.news-content-wrapper {
  margin-top: 32rpx;
  padding: 32rpx;
}

.news-section {
  margin: 24rpx 0;
}

.news-text {
  font-size: 35rpx;
  line-height: 49rpx;
  text-indent: 70rpx;
}

.news-text.strong {
  /* text-align: center; */
  font-weight: bold;
}

.news-image {
  width: 100%;
  /* height: 100%; */
}

/**index.wxss**/
.category-wrapper {
  position: fixed;
  top: 0;
  left: 0;
  right: 0; 
  display: flex;
  justify-content: space-around;
  align-items: center;
  background-color: #e91e63;
  color: white;
  font-size:32rpx;
  line-height: 45rpx;
  padding: 16rpx 0;
  z-index: 100;
  
}

.category-indicator {
  border-radius: 3rpx; 
  border:3rpx solid #f8bbd0;
  margin: 10rpx auto 0;
  width: 32rpx;
}

.news-wrapper {
  margin-top: 89rpx;
}

.hot-news-wrapper {
  position: relative;
  height: 400rpx;
  margin: 121rpx 32rpx 32rpx;/* 89 + 32 */
  overflow:auto;
  border-radius: 16rpx;
  box-shadow: 0 10rpx 40rpx 0 rgba(0,0,0,.19); 
  
}

.hot-news-info {
  position: absolute;
  font-size: 32rpx;
  line-height: 45rpx;
  color: white;
  left: 0;
  padding: 16rpx 32rpx;
  bottom:0;
  background: linear-gradient(rgba(0, 0, 0, 0.0), rgba(0, 0, 0, 0.5))
}
.hot-news-source-date {
  /* position: absolute; */
  display: flex;
  font-size: 23rpx;
  line-height: 32rpx;
  color: rgba(255, 255, 255, 0.5);
  margin-top: 16rpx;
}

.hot-news-date {
  margin-left: 32rpx;
}

.hot-news-tag {
  position: absolute;
  top: 0;
  right: 0;
  padding: 4rpx 8rpx 4rpx 16rpx;
  font-size: 23rpx;
  line-height: 32rpx;
  border-radius: 0 0 0 20rpx;
  color: white;
  background-color: rgba(255, 0, 0, 0.7);
  
}

.hot-news-image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: -1;
}

.news-item {
  display: flex;
  height: 200rpx;
  margin: 0 32rpx;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2)
}

.news-item-info {
  margin: auto 0;
  height: 150rpx;
  font-size: 32rpx;
  margin-right: 16rpx;
}

.news-item-title {
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  text-overflow:ellipsis;
  /* 以上4行实现超过2行的文字以...代替  */
  font-weight: 300;
  font-size: 32rpx;
  line-height: 45rpx;
  margin-right: 16rpx;
  height: 90rpx; /* 强制高度为行高的2倍, 保证能完整显示2行文字 */
  overflow: hidden;
}

.news-item-source-date {
  display: flex;
  font-size: 23rpx;
  line-height: 32rpx;
  margin-top: 28rpx; 
  color: rgba(0, 0, 0, 0.5); 
}

.news-item-date {
  margin-left: 32rpx;
}

.news-item-image {
  margin: auto 0;
  flex: 1 0 auto;
  height: 150rpx;
  width: 150rpx;
  background-color: #f8bbd0;
}